<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dash_board_coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/colorPrimary"
    tools:context="com.fgtit.fingerprintattendance.activity.DashBoardActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/dash_board_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimaryDark"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="5dp">


        <ImageView
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:padding="25dp"
            android:scaleType="fitXY"
            android:clickable="true"
            android:onClick="onClickRecords"
            android:layout_marginBottom="-19dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_round_blue"
            android:src="@mipmap/ic_records" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:padding="25dp"
                android:scaleType="fitXY"
                android:clickable="true"
                android:onClick="onClickSignOn"
                android:layout_marginRight="45dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/bg_round_blue"
                android:src="@mipmap/ic_fingerprint" />


            <ImageView
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:padding="25dp"
                android:scaleType="fitXY"
                android:clickable="true"
                android:onClick="onClickEnroll"
                android:layout_marginLeft="45dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/bg_round_blue"
                android:src="@mipmap/ic_enroll" />

        </LinearLayout>


        <ImageView
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:padding="25dp"
            android:scaleType="fitXY"
            android:clickable="true"
            android:onClick="onClickHistory"
            android:layout_marginTop="-25dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/bg_round_blue"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_roster"/>


    </LinearLayout>



</android.support.design.widget.CoordinatorLayout>